<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_guide_fifth"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@id/guide_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_guide_fifth_01"/>

    <LinearLayout
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:id="@id/guide_item_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxlarge">

        <ImageView
            android:id="@id/guide_item_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide_fifth_02"/>

        <ImageView
            android:id="@id/guide_item_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_marginRight="@dimen/margin_xxxlarge"
            android:src="@drawable/ic_guide_fifth_03"/>

        <ImageView
            android:id="@id/guide_item_2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide_fifth_04"/>
    </LinearLayout>

    <ImageView
        android:id="@id/guide_item_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:src="@drawable/ic_guide_fifth_05"/>

    <LinearLayout
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:id="@id/guide_item_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxlarge">

        <ImageView
            android:id="@id/guide_item_4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide_fifth_06"/>

        <ImageView
            android:id="@id/guide_item_4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_marginRight="@dimen/margin_xxxlarge"
            android:src="@drawable/ic_guide_fifth_07"/>

        <ImageView
            android:id="@id/guide_item_4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide_fifth_08"/>
    </LinearLayout>
</LinearLayout>