<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_tab_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tab with fragment"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_tab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tab with viewpager"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_sliding_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sliding tab"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pager indicator"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_msg_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="msg view"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_observable_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="observable scrollview"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_observable_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="observable recyclerview"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_tint_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tint_imageview"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gif"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_fragment_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragment 转场动画"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_powermanager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="power_manager"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_preference_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="preference_activity"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toolbar"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_loaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="飞入购物车抛物线动画"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="轮播图"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edittext"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_photoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="photoview"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="normal_widget"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>